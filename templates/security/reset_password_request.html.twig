{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de mot de passe{% endblock %}

{% block head %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
{% endblock %} 

{% block stylesheets %}
   <link href="{{ asset('assets/css/resetPasswordRequest.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class ="split-container">
    <div class ="left-side">
 
    </div>
    <div class ="right-side">
    <a href="{{ path('app_home') }}">
        <img src="{{ asset('assets/images/CleanThisLogo.png') }}"  alt="Logo Cleanthis" class="cleanthis-logo" style="position: absolute; top: 2%; right: 2%; z-index: 3;">
    </a>
    <div class="container">
    <h1 class="mt-4">Réinitialiser votre mot de passe</h1>
    {{ form_start(requestPassForm) }}
    {{ form_row(requestPassForm.email) }}
        <button type="submit" class="btn btn-primary btn-lg mt-3">Envoyer</button>
        {{ form_end(requestPassForm) }}
            <div class="connected">
                <p>Vous vous rappelez de votre mot de passe ?    </p><a href="{{ path('app_login') }}"> Connectez-vous</a>
            </div>
    </div>
    </div>
    </div>

{% endblock %}
