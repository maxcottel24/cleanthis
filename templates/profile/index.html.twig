{% extends 'base.html.twig' %}

{% block title %}CleanThis - Mon Profile
{% endblock %}

{% block body %}

{% include '_partials/_navbar.html.twig' %}

{% include '_partials/_devis.html.twig' %}

	<style>

		.example-wrapper {
			margin: 1em auto;
			max-width: 40rem;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}

		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}

		html,
		body {
			height: 80%;
		}

		#card-container {
			min-height: 100%;
			display: flex;
			align-items: center;
			justify-content: center;

		}

		.card {
			width: 100%;
			margin: 1rem;
			cursor: pointer;
			padding: 0;
		}

		.card a {
			color: inherit;
			text-decoration: none;
		}

		.fancy {
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
		}

		.backgrd {
			display: flex;
			flex-direction: unset;
			background-color: #92D4F5;
			font-weight: bold;
			color: white;
			width: 75rem;
			height: 12rem;
			border-radius: 0.8rem;
			margin-left: 0;
			top: 0;
			z-index: 0;
			position: absolute;
			top: 18%;
		}
		.backgrd p {
			margin-left: 1rem;
			margin-top: 0.5rem;
		}

		.profile {
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			border-radius: 2rem;
			width: 52%;
			height: 200%;
			padding-top: 2rem;
			padding-bottom: 2rem;
			background-color: white;
			border: 3px solid #f4f4f4;
			box-shadow: 0 5px 5px #f5f5f5;
			z-index: 1;
			margin-top: 10rem;
		}

		.card-link:hover {
			background-color: #CBDAFF;
			transition: background 0.3s;
		}

		.profile h5 {
			color: #123b61;
		}

		.profile p {
			color: #123b61;
		}
		
	</style>
	<section class="fancy">
		<div class="backgrd">
			<p>MON PROFIL</p>
		</div>
		<div class="profile">
			<div id="card-container" class="container">
				<div class="card-deck">
					<div class="card">
						<a href="/meeting/{{app.user.id}}" class="card-link">
							<div class="card-body text-center">
								<h5 class="card-title">Vos commandes</h5>
								<p class="card-text">Suivi, annulation</p>
							</div>
						</a>
					</div>
					<div class="card">
						<a href="/profile/edition/{{app.user.id}}" class="card-link">
							<div class="card-body text-center">
								<h5 class="card-title">Connexion - Sécurité</h5>
								<p class="card-text">Modification adresse e-mail, nom, numéro de téléphone etc...</p>
							</div>
						</a>
					</div>
					<div class="card">
						<a href="/address/{{app.user.id}}" class="card-link">
							<div class="card-body text-center">
								<h5 class="card-title">Adresses</h5>
								<p class="card-text">Modification de vos adresses, ajout, changer l'adresse de facturation</p>
							</div>
						</a>
					</div>
				</div>
			</div>

		</div>
	</section>


{% endblock %}
