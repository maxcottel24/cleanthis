{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible d-flex justify-content-between align-items-center position-fixed bottom-0 start-0 p-3 auto-dismissible" role="alert" style="z-index: 1050; width: auto; min-width: 300px; max-width: 100%;">
            <div class="flex-grow-1 me-3">
                <strong>{{ message|raw }}</strong>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}

<style>
.auto-dismissible {
    transition: opacity 0.6s ease-out;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', (event) => {
    const autoDismissAlerts = document.querySelectorAll('.auto-dismissible');
    autoDismissAlerts.forEach((alert) => {
        setTimeout(() => {
            alert.style.opacity = '0';
            setTimeout(() => alert.remove(), 600);
        }, 4000); 
    });
});
</script>

