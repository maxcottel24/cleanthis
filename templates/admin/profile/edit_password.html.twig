{% extends '@!EasyAdmin/layout.html.twig' %}

{% block content %}
	<section class="container my-3">
		<div class="row">
			<div class="col px-4 py-4">
				<h1 class="pb-2 border-bottom">{{ "Modification du mot de passe" |trans }}</h1>
				{{ form_start(editAdminPasswordType) }}
				    <fieldset class="mb-3">
					    {{ form_row(editAdminPasswordType.password) }}
				    </fieldset>
                    <button type="submit" class="btn btn-primary btn-lg mt-3">{{ "Envoyer" |trans }}</button>
                {{ form_end(editAdminPasswordType) }}
			</div>
		</div>
	</section>
{% endblock %}